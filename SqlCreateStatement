CREATE SCHEMA IF NOT EXISTS `Jobs` DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;

CREATE TABLE `jobs` (
  `job_id` int(11) NOT NULL auto_increment,
  `title` varchar(100) default NULL,
  `description` longtext,
  `location` varchar(45) default NULL,
  `industry` varchar(45) default NULL,
  `employment` varchar(45) default NULL,
  `employer` varchar(45) default NULL,
  `contact_number` varchar(15) default NULL,
  `contact_email` varchar(60) default NULL,
  `contact_address` varchar(500) default NULL,
  `date_added` date default NULL,
  `url_link` varchar(1000) default NULL,
  PRIMARY KEY  (`job_id`)
);
